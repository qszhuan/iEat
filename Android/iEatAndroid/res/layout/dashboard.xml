<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/myGroup" android:text="My Groups"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/addGroup" android:text="Add Group"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/joinedGroup" android:text="Joined Groups"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/joinAnotherGroup" android:text="Join Another Group"/>
</LinearLayout>
